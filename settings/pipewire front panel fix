~/.config/pipewire/pipewire.conf.d/pipewire.conf

{ factory = adapter
    args = {
        factory.name           = api.alsa.pcm.sink
        node.name              = "alsa-sink"
        node.description       = "Front Panel"
        media.class            = "Audio/Sink"
        api.alsa.path          = "front:CARD=PCH,DEV=0"
        api.alsa.period-size   = 1024
        api.alsa.headroom      = 0
        api.alsa.disable-mmap  = false
        api.alsa.disable-batch = false
        audio.format           = "S16LE"
        audio.rate             = 48000
        audio.channels         = 2
        audio.position         = "FL,FR"
    }
}

~/.config/pipewire/pipewire.conf.d/microphone.conf

context.objects = [
    { factory = adapter
        args = {
            factory.name           = api.alsa.pcm.source
            node.name              = "microphone"
            node.description       = "Default Microphone"
            media.class            = "Audio/Source"
            api.alsa.path          = "hw:0,0"
        }
    }
]

restart pipewire

systemctl --user restart pipewire pipewire-pulse
systemctl --user daemon-reload
